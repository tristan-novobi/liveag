<odoo>
    <!-- list View -->
    <record id="contract_activity_log_list_view" model="ir.ui.view">
        <field name="name">contract.activity.log.list</field>
        <field name="model">contract.activity.log</field>
        <field name="arch" type="xml">
            <list string="Contract Activity Log">
              <field name="contract_id"/>
              <field name="field_label" string="Field Changed"/>
              <field name="old_value"/>
              <field name="new_value"/>
              <field name="timestamp"/>
              <field name="user_id"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="contract_activity_log_search_view" model="ir.ui.view">
        <field name="name">contract.activity.log.search</field>
        <field name="model">contract.activity.log</field>
        <field name="arch" type="xml">
            <search string="Contract Activity Log">
              <field name="contract_id"/>
              <field name="field_label" string="Field Changed"/>
              <field name="old_value"/>
              <field name="new_value"/>
              <field name="message"/>
              <field name="timestamp"/>
              <field name="user_id"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="contract_activity_log_action" model="ir.actions.act_window">
        <field name="name">Contract Activity Logs</field>
        <field name="res_model">contract.activity.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kind_list_view_list" model="ir.ui.view">
        <field name="name">kind.list.view.list</field>
        <field name="model">kind.list</field>
        <field name="arch" type="xml">
            <list string="Kind" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="sex"/>
            </list>
        </field>
    </record>

    <record id="kind_list_view_search" model="ir.ui.view">
        <field name="name">kind.list.view.search</field>
        <field name="model">kind.list</field>
        <field name="arch" type="xml">
            <search string="Kind">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="kind_list_action" model="ir.actions.act_window">
        <field name="name">Kinds</field>
        <field name="res_model">kind.list</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Kind found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

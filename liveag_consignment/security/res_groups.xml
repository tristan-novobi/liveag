<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- One privilege per role so the user form shows one row per role (multi-select).
             All under the same category so they appear together under "Commercial Cattle". -->
        <record id="res_groups_privilege_consignment_buyer" model="res.groups.privilege">
            <field name="name">Buyer</field>
            <field name="category_id" ref="liveag_consignment.module_category_consignment"/>
        </record>
        <record id="res_groups_privilege_consignment_seller" model="res.groups.privilege">
            <field name="name">Seller</field>
            <field name="category_id" ref="liveag_consignment.module_category_consignment"/>
        </record>
        <record id="res_groups_privilege_consignment_rep" model="res.groups.privilege">
            <field name="name">Rep</field>
            <field name="category_id" ref="liveag_consignment.module_category_consignment"/>
        </record>
        <record id="res_groups_privilege_consignment_manager" model="res.groups.privilege">
            <field name="name">Administrator</field>
            <field name="category_id" ref="liveag_consignment.module_category_consignment"/>
        </record>

        <!-- Role-specific groups. Each implies base.group_portal so users with these
             roles remain Portal users and do not consume a paid license. -->
        <record id="group_consignment_buyer" model="res.groups">
            <field name="name">Buyer</field>
            <field name="privilege_id" ref="res_groups_privilege_consignment_buyer"/>
        </record>

        <record id="group_consignment_seller" model="res.groups">
            <field name="name">Seller</field>
            <field name="privilege_id" ref="res_groups_privilege_consignment_seller"/>
        </record>

        <record id="group_consignment_rep" model="res.groups">
            <field name="name">Rep</field>
            <field name="privilege_id" ref="res_groups_privilege_consignment_rep"/>
        </record>

        <!-- Administrator does not imply Portal so internal users (e.g. admin) can have this role -->
        <record id="group_consignment_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="res_groups_privilege_consignment_manager"/>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="genetic_merit_view_list" model="ir.ui.view">
        <field name="name">genetic.merit.view.list</field>
        <field name="model">genetic.merit</field>
        <field name="arch" type="xml">
            <list string="Genetic Merit" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
            </list>
        </field>
    </record>

    <record id="genetic_merit_view_search" model="ir.ui.view">
        <field name="name">genetic.merit.view.search</field>
        <field name="model">genetic.merit</field>
        <field name="arch" type="xml">
            <search string="Genetic Merit">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="genetic_merit_action" model="ir.actions.act_window">
        <field name="name">Genetic Merit</field>
        <field name="res_model">genetic.merit</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No record found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

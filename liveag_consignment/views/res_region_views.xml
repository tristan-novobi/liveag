<odoo>
    <record id="region_view_list" model="ir.ui.view">
        <field name="name">res.region.view.list</field>
        <field name="model">res.region</field>
        <field name="arch" type="xml">
            <list string="Regions">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="region_view_form" model="ir.ui.view">
        <field name="name">res.region.view.form</field>
        <field name="model">res.region</field>
        <field name="arch" type="xml">
            <form string="Region">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="region_view_search" model="ir.ui.view">
        <field name="name">res.region.view.search</field>
        <field name="model">res.region</field>
        <field name="arch" type="xml">
            <search string="Regions">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="region_action" model="ir.actions.act_window">
        <field name="name">Regions</field>
        <field name="res_model">res.region</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Regions found. Create one now!
            </p>
        </field>
    </record>
</odoo>

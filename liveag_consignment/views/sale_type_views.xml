<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_type_view_list" model="ir.ui.view">
        <field name="name">sale.type.view.list</field>
        <field name="model">sale.type</field>
        <field name="arch" type="xml">
            <list string="Sale Type" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="id" optional="hide"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="sale_type_view_search" model="ir.ui.view">
        <field name="name">sale.type.view.search</field>
        <field name="model">sale.type</field>
        <field name="arch" type="xml">
            <search string="Sale Type">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="sale_type_action" model="ir.actions.act_window">
        <field name="name">Sale Types</field>
        <field name="res_model">sale.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Sale Type found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

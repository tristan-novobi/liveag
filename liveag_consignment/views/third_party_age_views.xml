<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="third_party_age_view_list" model="ir.ui.view">
        <field name="name">third.party.age.view.list</field>
        <field name="model">third.party.age</field>
        <field name="arch" type="xml">
            <list string="3rd Party Age/Source" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
            </list>
        </field>
    </record>

    <record id="third_party_age_view_search" model="ir.ui.view">
        <field name="name">third.party.age.view.search</field>
        <field name="model">third.party.age</field>
        <field name="arch" type="xml">
            <search string="3rd Party Age/Source">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="third_party_age_action" model="ir.actions.act_window">
        <field name="name">3rd Party Age/Source</field>
        <field name="res_model">third.party.age</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No record found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_split_contract_wizard_form" model="ir.ui.view">
            <field name="name">split.contract.wizard.form</field>
            <field name="model">split.contract.wizard</field>
            <field name="arch" type="xml">
                <form string="Split contract">
                    <group>
                        <group>
                            <field name="load_option" readonly="1"/>
                            <field name="created_loads" readonly="1"/>
                        </group>
                        <group>
                            <field name="available_loads" readonly="1"/>
                            <field name="batch_size" readonly="1"/>
                        </group>
                            <div> How many load you want to use for the new contract?</div>
                            <field name="number_of_lots" nolabel="1"/>
                    </group>
                    <group string="Summary">
                        <field name="split_message"/>
                    </group>
                    
                    <footer>
                        <button string="Split" name="action_create_contracts" type="object" class="oe_highlight" data-hotkey="q" />
                        <button string="Discard" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>

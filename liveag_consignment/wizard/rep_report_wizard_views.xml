<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rep_report_wizard_form" model="ir.ui.view">
        <field name="name">rep.report.wizard.form</field>
        <field name="model">rep.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Rep">
                <group>
                    <field name="auction_id" invisible="1"/>
                    <field name="show_date_filter" invisible="1"/>
                    <field name="available_rep_ids" invisible="1"/>
                    <field name="date_from" invisible="not show_date_filter"/>
                    <field name="date_to" invisible="not show_date_filter"/>
                    <field name="rep_id" domain="[('id', 'in', available_rep_ids)]" 
                    required="1"
                    />
                    <field name="print_with_contracts" widget="boolean_toggle"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
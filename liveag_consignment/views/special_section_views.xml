<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="special_section_view_list" model="ir.ui.view">
        <field name="name">special.section.view.list</field>
        <field name="model">special.section</field>
        <field name="arch" type="xml">
            <list string="Special Section" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
            </list>
        </field>
    </record>

    <record id="special_section_view_search" model="ir.ui.view">
        <field name="name">special.section.view.search</field>
        <field name="model">special.section</field>
        <field name="arch" type="xml">
            <search string="Special Section">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="special_section_action" model="ir.actions.act_window">
        <field name="name">Special Section</field>
        <field name="res_model">special.section</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No record found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

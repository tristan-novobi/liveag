<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!-- Send emails to see what customers to reach out to for auction reminders. -->
        <record id="cron_send_auction_reminders" model="ir.cron">
            <field name="name">Send Auction Reminders</field>
            <field name="model_id" ref="liveag_consignment.model_sale_auction" />
            <field name="state">code</field>
            <field name="code">model._send_scheduled_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False" />
            <field name="nextcall">2025-12-31 00:00:00</field>
            <!-- <field name="numbercall">-1</field> -->
        </record>
    </data>
</odoo>

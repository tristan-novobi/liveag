<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format -->
        <record id="paperformat_buyers_final" model="report.paperformat">
            <field name="name">Buyer's Final</field>
            <field name="default" eval="False"/>
            <field name="format">Letter</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">5</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>
        
        <!-- QWeb Reports -->
        <record id="buyers_final_report" model="ir.actions.report">
            <field name="name">Buyer's Final</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">liveag_consignment.report_buyers_final</field>
            <field name="report_file">liveag_consignment.report_buyers_final</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyers_final"/>
        </record>
        <record id="seller_final_report" model="ir.actions.report">
            <field name="name">Seller's Final</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">liveag_consignment.auction_report_seller</field>
            <field name="report_file">liveag_consignment.auction_report_seller</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyers_final"/>
        </record>

        <record id="paperformat_buyer_report" model="report.paperformat">
            <field name="name">Buyer Report</field>
            <field name="default" eval="False"/>
            <field name="format">Letter</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">5</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>

        <record id="action_report_buyer" model="ir.actions.report">
            <field name="name">Buyer Report</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">liveag_consignment.auction_report_buyer</field>
            <field name="report_file">liveag_consignment.auction_report_buyer</field>
            <field name="print_report_name">'Buyer Report - %s' % object.name</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyer_report"/>
        </record>

        <record id="action_report_seller" model="ir.actions.report">
            <field name="name">Seller Report</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">liveag_consignment.auction_report_seller</field>
            <field name="report_file">liveag_consignment.auction_report_seller</field>
            <field name="print_report_name">'Seller Report - %s' % object.name</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyer_report"/>
        </record>
        
        <record id="action_report_rep_final" model="ir.actions.report">
            <field name="name">Rep Recap Final</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">liveag_consignment.auction_report_rep</field>
            <field name="report_file">liveag_consignment.auction_report_rep</field>
            <field name="print_report_name">'Rep Recap Final - %s' % object.name</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyer_report"/>
        </record>
        
        <record id="action_report_rep" model="ir.actions.report">
            <field name="name">Rep Recap</field>
            <field name="model">sale.auction</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">liveag_consignment.auction_report_rep</field>
            <field name="report_file">liveag_consignment.auction_report_rep</field>
            <field name="print_report_name">'Rep Recap - %s' % object.name</field>
            <field name="binding_model_id" ref="model_sale_auction"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_buyer_report"/>
        </record>
    </data>
</odoo>
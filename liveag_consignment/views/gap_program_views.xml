<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gap_program_view_list" model="ir.ui.view">
        <field name="name">gap.program.view.list</field>
        <field name="model">gap.program</field>
        <field name="arch" type="xml">
            <list string="GAP Program" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
            </list>
        </field>
    </record>

    <record id="gap_program_view_search" model="ir.ui.view">
        <field name="name">gap.program.view.search</field>
        <field name="model">gap.program</field>
        <field name="arch" type="xml">
            <search string="GAP Program">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="gap_program_action" model="ir.actions.act_window">
        <field name="name">GAP Programs</field>
        <field name="res_model">gap.program</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No record found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

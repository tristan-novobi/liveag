<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="frame_size_view_list" model="ir.ui.view">
        <field name="name">frame.size.view.list</field>
        <field name="model">frame.size</field>
        <field name="arch" type="xml">
            <list string="Frame Size" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="frame_size_view_search" model="ir.ui.view">
        <field name="name">frame.size.view.search</field>
        <field name="model">frame.size</field>
        <field name="arch" type="xml">
            <search string="Frame Size">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="frame_size_action" model="ir.actions.act_window">
        <field name="name">Frame Sizes</field>
        <field name="res_model">frame.size</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Frame Size found. Let's create one!
            </p>
        </field>
    </record>
</odoo>

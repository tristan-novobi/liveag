<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_buyer_email_send_wizard_form" model="ir.ui.view">
        <field name="name">buyer.email.send.wizard.form</field>
        <field name="model">buyer.email.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Buyer Reports">
                <group>
                    <field name="auction_id" readonly="1"/>
                    <field name="show_date_filter" invisible="1"/>
                    <field name="date_from" invisible="not show_date_filter"/>
                    <field name="date_to" invisible="not show_date_filter"/>
                    <field name="print_with_contracts"/>
                    <label string="Recipients" for="available_buyer_ids"/>
                    <field name="available_buyer_ids" widget="many2many_tags" nolabel="1" readonly="1"/>
                </group>
                <footer>
                    <button name="action_send_emails" type="object" class="btn-primary" string="Send Emails"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_buyer_email_send_wizard" model="ir.actions.act_window">
        <field name="name">Send Buyer Reports</field>
        <field name="res_model">buyer.email.send.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="weight_variance_view_list" model="ir.ui.view">
        <field name="name">weight.variance.view.list</field>
        <field name="model">weight.variance</field>
        <field name="arch" type="xml">
            <list string="Weight Variance" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="weight_variance_view_search" model="ir.ui.view">
        <field name="name">weight.variance.view.search</field>
        <field name="model">weight.variance</field>
        <field name="arch" type="xml">
            <search string="Weight Variance">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="weight_variance_action" model="ir.actions.act_window">
        <field name="name">Weight Variances</field>
        <field name="res_model">weight.variance</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Weight Variance found. Let's create one!
            </p>
        </field>
    </record>
</odoo>
